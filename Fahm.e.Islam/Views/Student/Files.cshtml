@model IEnumerable<ZeeSoft.ClassRoomJson.ResourceFile>

@{
    ViewBag.Title = "Files";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Files</h2>

<p>
    @Html.ActionLink("Create New", "CreateFile")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateModified)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Extention)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsCompressed)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FileName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remarks)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateModified)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Size)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Extention)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsCompressed)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditFile", new { fileId = item.Id }) |
            @Html.ActionLink("Details", "FileDetails", new { fileId = item.Id }) |
            @Html.ActionLink("Delete", "DeleteFile", new { fileId = item.Id })
        </td>
    </tr>
}

</table>
