@model ZeeSoft.ClassRoomJson.Student

@{
	ViewBag.Title = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
	var courses = ZeeSoft.ClassRoomJson.Academy.Current.Courses.Where(c=>Model.Courses.Contains(c.Id)).ToList();
	string coursesList = "";
	foreach (var item in courses)
	{
		coursesList += " <span class='badge'>" +
			item.Name + "</span>";
	}

}

<div>
    <div class="page-header">
        <h2>Student Details</h2>
        <hr />
    </div>
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.Name)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Name)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.Email)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Email)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.UserId)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.UserId)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Password)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Password)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.ContactNo)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.ContactNo)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.City)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.City)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.Country)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Country)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.PostalAddress)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.PostalAddress)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.DOB)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.DOB)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.CmbCourse)
		</dt>

		<dd>
			@Html.Raw(coursesList)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Status)
		</dt>

		<dd>
			@Html.Raw(Model.Status.ToYesNo())
		</dd>

	</dl>
</div>
<p>
	@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
	@Html.ActionLink("Back to List", "Index")
</p>
