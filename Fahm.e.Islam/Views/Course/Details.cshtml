@model ZeeSoft.ClassRoomJson.Course

@{
	ViewBag.Title = "Detail";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="page-header">
        <h2>Course Details</h2>
        <hr />
    </div>
	<dl class="dl-horizontal">
  
		<dt>
			@Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Name)
		</dd>
		<dt>
			Teachers
		</dt>
		<dd>
			
			<ol>
				@foreach (var teacher in ZeeSoft.ClassRoomJson.Academy.Current.GetTeachersByCourseId(Model.Id))
				{
					<li>@teacher.Name</li>
				}
			</ol>
		</dd>
		<dt>
			@Html.LabelFor(model => model.NoOfClasses, new { @class = "control-label col-md-2" })
		</dt>
		<dd>
			@Html.DisplayFor(model => model.NoOfClasses)
		</dd>
		<dt>
			@Html.LabelFor(model => model.Status, new { @class = "control-label col-md-2" })
		</dt>
		<dd>
			@Html.Raw(Model.Status.ToYesNo())
		</dd>
		<dt>
			@Html.LabelFor(model => model.Topics, new { @class = "control-label col-md-2" })
		</dt>
		<dd>
			<ol>
				@foreach (var topic in Model.Topics)
				{
					<li>@topic.Description</li>
				}
			</ol>
		</dd>
		<dt>
			@Html.LabelFor(model => model.Remarks, new { @class = "control-label col-md-2" })
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Remarks)
		</dd>
	</dl>
   
		
		
		
</div>
<p>
	@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
	@Html.ActionLink("Back to List", "Index")
</p>
